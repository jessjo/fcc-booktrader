<% if (!user) { %>
	<p>Welcome! Please <a href="/auth/facebook">log in with facebook</a>.</p>
<% } else { %>
	<p>Hello, <%= user.name %>.</p>
	  <% for(var i=0; i<books.length; i++) { %>
        <div id="book">
            <a href='books/<%= books[i].bookid %>'>
                <img src='<%= books[i].thumbnail %>'>
                <div id='book-title'> <%= books[i].title %></div>
            </a>
        </div>
    <% } %>
<% } %>